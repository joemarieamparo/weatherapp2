<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_secure_margin_normal">

    <TextView
        android:id="@+id/textview_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="@string/today"/>

    <TextView
        android:id="@+id/textview_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_below="@id/textview_today"
        android:layout_marginTop="@dimen/common_secure_margin_small"/>

    <ImageView
        android:id="@+id/imageview_weather_icon"
        android:layout_width="@dimen/weather_icon_size"
        android:layout_height="@dimen/weather_icon_size"
        android:layout_below="@+id/textview_city_name"
        android:layout_marginTop="@dimen/common_secure_margin_xlarge"/>

    <TextView
        android:id="@+id/textview_current_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_weather_icon"
        android:layout_alignTop="@+id/imageview_weather_icon"
        android:layout_marginLeft="@dimen/common_secure_margin_large"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/textview_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textview_current_weather"
        android:layout_below="@id/textview_current_weather"
        android:layout_marginTop="@dimen/common_secure_margin_small"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/textview_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textview_current_weather"
        android:layout_below="@id/textview_humidity"
        android:layout_marginTop="@dimen/common_secure_margin_small"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</RelativeLayout>